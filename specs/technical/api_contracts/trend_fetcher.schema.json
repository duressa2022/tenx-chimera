{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TrendFetcherOutput",
  "type": "object",
  "required": ["trend_id", "source", "summary", "confidence_score", "risk_level", "timestamp"],
  "properties": {
    "trend_id": { "type": "string" },
    "source": { "type": "string" },
    "summary": { "type": "string" },
    "confidence_score": { "type": "number", "minimum": 0, "maximum": 1 },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "recommended_content_types": { "type": "array", "items": { "type": "string", "enum": ["text","image","video","audio"] } },
    "example_media": { "type": "array", "items": { "type": "object", "properties": { "url": { "type": "string", "format": "uri" }, "mime_type": { "type": "string" } }, "required": ["url"], "additionalProperties": true } },
    "provenance": { "type": "object", "additionalProperties": true },
    "human_review_ticket": { "type": ["string", "null"] }
  },
  "additionalProperties": false
}
