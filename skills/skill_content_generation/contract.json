{
  "skill_id": "skill_content_generation",
  "version": "1.1.0",
  "description": "Generates content drafts in multiple media formats (text, audio, video, image).",
  "input": {
    "type": "object",
    "required": ["trend_id", "content_type", "tone"],
    "properties": {
      "trend_id": { "type": "string" },
      "content_type": {
        "type": "string",
        "enum": ["text", "audio", "video", "image"]
      },
      "tone": {
        "type": "string",
        "enum": ["informative", "neutral", "educational", "promotional", "entertaining"]
      },
      "format_options": {
        "type": "object",
        "description": "Optional generation parameters (e.g., image resolution, audio voice, video aspect ratio)",
        "additionalProperties": true
      }
    }
  },
  "output": {
    "type": "object",
    "required": ["content_id", "result", "risk_classification"],
    "properties": {
      "content_id": { "type": "string" },
      "risk_classification": {
        "type": "string",
        "enum": ["low", "medium", "high"]
      },
      "result": {
        "oneOf": [
          {
            "title": "TextResult",
            "type": "object",
            "required": ["body", "mime_type"],
            "properties": {
              "body": { "type": "string" },
              "mime_type": { "type": "string", "enum": ["text/plain", "text/markdown"] }
            }
          },
          {
            "title": "MediaResult",
            "type": "object",
            "required": ["url", "mime_type"],
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "mime_type": { "type": "string" },
              "duration_ms": { "type": "integer" },
              "thumbnail_url": { "type": "string", "format": "uri" },
              "metadata": { "type": "object", "additionalProperties": true }
            }
          }
        ]
      }
    }
  }
}
