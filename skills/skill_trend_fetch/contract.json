{
  "skill_id": "skill_trend_fetch",
  "version": "1.1.0",
  "spec_reference": "specs/functional/trend_research.md",
  "input": {
    "type": "object",
    "required": ["source", "niche"],
    "properties": {
      "source": {
        "type": "string",
        "enum": ["youtube", "tiktok", "twitter", "google_trends"]
      },
      "niche": {
        "type": "string",
        "minLength": 3
      }
    },
    "additionalProperties": false
  },
  "output": {
    "type": "object",
    "required": ["trend_id", "summary", "confidence_score", "risk_level"],
    "properties": {
      "trend_id": { "type": "string" },
      "summary": { "type": "string" },
      "confidence_score": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      },
      "risk_level": {
        "type": "string",
        "enum": ["low", "medium", "high"]
      },
      "recommended_content_types": { "type": "array", "items": { "type": "string", "enum": ["text","image","video","audio"] } },
      "example_media": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": { "url": { "type": "string", "format": "uri" }, "mime_type": { "type": "string" } },
          "required": ["url"],
          "additionalProperties": true
        }
      },
      "provenance": { "type": "object", "additionalProperties": true },
      "human_review_ticket": { "type": ["string", "null"] }
    }
  }
}
